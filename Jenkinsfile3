pipeline {
    agent {label 'MAVEN_JDK_8'}
    stages {
        stage('vcs'){
            steps{
                git url: 'https://github.com/konetipaddu/spring-petclinic.git',
                branch: 'main'
            }
        }
        stage('sonar'){
            steps{
                withSonarQubeEnv('SONAR_HOST') {
                    sh 'mvn clean package sonar:sonar -Dsonar.projectKey=padma_spring -Dsonar.organization=spring -Dsonar.host.url=https://sonarcloud.io'
                }
            }
        }
    }
}