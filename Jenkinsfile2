pipeline {
    agent { label 'MAVEN_JDK_8'}
    stages {
        stage ('vcs') {
            steps {
                git url: 'https://github.com/konetipaddu/game-of-life.git',
                branch: 'main'
            }
        }
        stage ('package') {
            tools {
                jdk 'JDK_UBUNTU_8'
            }
            
            steps {
                sh 'mvn package'
            }
        }
        
        stage ('post build') {
            steps {
                archiveArtifacts artifacts: '**/target/gameoflife.war',
                                 allowEmptyArchive: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
    }
}
    
